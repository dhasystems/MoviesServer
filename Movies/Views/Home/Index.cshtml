                    //{ "data": "title", "name": "title" },
                    //{ "data": "year", "name": "year" },
                    //{ "data": "tmdb_id", "name": "tmdb_id" },
                    //{ "data": "genre", "name": "genre" },
                    //{ "data": "quality", "name": "quality" },
                    //{ "data": "type", "name": "type" }
                ],
                "serverSide": "true",
                "order": [0, "desc"],
                "processing": "true",
                "language": {
                    "processing": "processing... please wait."
                }
                //"order": [[
                //    0, 'desc'
                //]],
                //"stateSave": true
            });
        });

    </script>
}






